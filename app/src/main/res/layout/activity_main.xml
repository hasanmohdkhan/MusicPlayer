<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/list_item_height"
    android:orientation="vertical"
    tools:context="com.example.hasanzian.hackerearth.MainActivity">

    <!-- list Item main grid -->
    <!-- which main layout for list items -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Image View for Album art which is
        going to show cover_image from api  -->
        <ImageView
            android:id="@+id/albumart"
            android:layout_width="@dimen/list_item_height"
            android:layout_height="@dimen/list_item_height"
            android:src="@drawable/music_note" android:contentDescription="Ablum art"/>

        <LinearLayout
            android:id="@+id/song_list_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingStart="16dp">


            <!-- 1st row is divide in to song name and heart icon -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <!-- Song name text view-->
                <TextView
                    android:id="@+id/song_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:paddingTop="8dp"
                    android:text="@string/song_name"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"
                    tools:text="Song Name"
                    />


                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingTop="8dp"
                    android:src="@drawable/heart_outline"
                    />


            </LinearLayout>

            <!--  artist name text view -->
            <TextView
                android:id="@+id/artist_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:text="@string/artist_name"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/textColor"
                android:textStyle="italic"
                tools:text="Artist" />


            <!-- Play icon for play song -->
            <ImageView
                android:id="@+id/play_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:gravity="top"
                android:src="@drawable/play" />


        </LinearLayout>


    </LinearLayout>










</LinearLayout>