<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingEnd="16dp"

    android:paddingRight="16dp"
    >

    <!-- list Item main grid -->
    <!-- which main layout for list items -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:padding="8dp"
       >


        <!-- Image View for Album art which is
        going to show cover_image from api  -->
        <ImageView
            android:id="@+id/albumart"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_gravity="left"
            android:background="@drawable/magnitude_circle"
            tools:src="@drawable/music_note"

            android:gravity="end"


            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical">


            <!-- 1st row is divide in to song name and heart icon -->

            <TextView
                android:id="@+id/song_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/song_name"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#2B3D4D"
                android:textStyle="bold"
                tools:text="Song Name"
                />




            <!--  artist name text view -->
            <TextView
                android:id="@+id/artist_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:singleLine="true"
                android:ellipsize="end"
                android:text="@string/artist_name"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#B4BAC0"
                android:textStyle="normal"
                tools:text="Artist" />



        <ImageView
            android:id="@+id/play_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:src="@drawable/ic_play_black_24dp"
            />




        </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">



        <!-- Play icon for play song -->
        <ImageView
            android:id="@+id/like_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart_outline_black_24dp"
            />












    </LinearLayout>









    </LinearLayout>










